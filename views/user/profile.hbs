<div class='row mt-5 mb-3'>
  <div class='col-md-4'>
    <img
      class='img-responsive center-block mb-5'
      src='{{user.image}}'
      style='width: 250px; transition: opacity 0.5s; opacity:0;'
      onload='this.style.opacity=1;'
    />
  </div>
  <div class='col-md-8'>
    <h2>{{user.name}}</h2>
    <h3>{{user.email}}</h3>
    <a
      class='btn btn-outline-success mt-3'
      href='/user/{{user.id}}/edit'
    >Edit</a>
  </div>
</div>

<div class='row'>
  <div class='col-12'>
    <div class='card mb-3'>
      <div class='card-header'>0 Commented restaurants</div>
      <div class='card-body'>
        <a href='/restaurant/{{this.id}}' class='text-decoration-none'>
          <img
            src={{this.image}}
            width='60'
            height='60'
            class='avatar'
            style='transition: opacity 0.5s; opacity:0;'
            onload='this.style.opacity=1;'
          />
        </a>
      </div>
    </div>
  </div>
</div>