<header>
  <nav class='navbar navbar-expand-lg fixed-top navbar-light bg-dark px-4'>
    <div class='container-fluid'>
      <a class='navbar-brand fw-bold text-light' href='/'>Restaurants World</a>
      {{#if user}}
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarCollapse'
          aria-controls='navbarCollapse'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarCollapse'>
          <ul class='navbar-nav ms-auto mb-2 mb-md-0'>
            {{#if user.isAdmin}}
              <li class='nav-item'>
                <a href='/admin' class='nav-link'>Admin 後台</a>
              </li>
            {{/if}}
            <li class='nav-item d-inline-flex align-items-center'>
              <span class='text-white nav-link'>Hi, {{user.email}}</span>
            </li>
            <li class='nav-item'>
              <a href='/logout' class='btn btn-warning fw-bold'>Logout</a>
            </li>
          </ul>
        </div>
      {{/if}}
    </div>
  </nav>
</header>